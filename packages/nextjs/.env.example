# SoonPay Integration Configuration
# Copy this file to .env.local and configure your settings

# Enable/Disable SoonPay integration (keep false for local development)
NEXT_PUBLIC_SOONPAY_ENABLED=false

# Environment: local, testnet, mainnet
NEXT_PUBLIC_ENVIRONMENT=local

# SoonPay API Endpoints (only needed when SOONPAY_ENABLED=true)
NEXT_PUBLIC_SOONPAY_API_URL=https://api.soonpay.com
NEXT_PUBLIC_SOONPAY_AUTH_URL=https://auth.soonpay.com

# RPC Endpoints
NEXT_PUBLIC_RPC_ENDPOINT=https://eth.drpc.org

# Token Addresses (will be auto-populated for local development)
NEXT_PUBLIC_LIQUID_TOKEN_LOCAL=
NEXT_PUBLIC_LIQUID_TOKEN_TESTNET=
NEXT_PUBLIC_LIQUID_TOKEN_MAINNET=

# CoinGecko API (for currency conversion)
NEXT_PUBLIC_COINGECKO_API_KEY=CG-fBP52GvjZkm2CZunNEQUCL2m

# Development Settings
NEXT_PUBLIC_DEBUG_MODE=true